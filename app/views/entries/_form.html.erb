<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% unless @multiline %>
<div class="wrapperbox">
<% else %>
<div>
  <% end %>
  <div class="field" id="colorbox">
    <%= f.label :color %><br />
    <%= f.select( :color, %w[green amber red], {:include_blank => false}, :tabindex => 2) %>
  </div>
  <div class="field" id="contentbox">
    <%= current_user.name %>, what did you do?<br />
    <% if @multiline %>
      <%= f.text_area :content %>
    <% else %>
      <%= f.text_field :content, :autofocus => true, :tabindex => 1 %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit :tabindex => 3 %>
  </div>
</div>

<% end %>
